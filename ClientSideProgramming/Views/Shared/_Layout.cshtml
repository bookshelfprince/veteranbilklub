<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta lang="da">
	<title>@ViewBag.Title - Veteranbil klub</title>
	<meta name="description" content="@ViewBag.Description" />

	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" rel="stylesheet" type="text/css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
	<link href="@Url.Content("~/Content/stylesheet.css")" rel="stylesheet" type="text/css" />
</head>
<body>
	<!-- Navigation bar -->
	<div class="badass-nav">
		<div class="container-fluid desktop">
			<div class="row">
				<div class="col-12">
					<nav class="navbar navbar-expand-sm navbar-light nav-color">
						<a class="navbar-brand nav-item-color" href="#">Veteranbil klub</a>
						<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="collapse navbar-collapse" id="collapsibleNavbar">
							<ul class="navbar-nav mr-auto">
								<li class="nav-item">
									@Html.ActionLink("Hjem", "Index", "Home", null, new { @class = "nav-link nav-item-color btn" })
								</li>
								<li class="nav-item">
									@Html.ActionLink("Medlemmer", "Members", "Home", null, new { @class = "nav-link nav-item-color btn ml-2" })
								</li>
								<li class="nav-item">
									@Html.ActionLink("Biler", "Cars", "Home", null, new { @class = "nav-link nav-item-color btn ml-2" })
								</li>
								<li class="nav-item">
									@Html.ActionLink("Reservedele", "Spareparts", "Home", null, new { @class = "nav-link nav-item-color btn ml-2" })
								</li>
							</ul>
							<ul class="navbar-nav">
								@{ if (!User.Identity.IsAuthenticated)
									{
										<li class="login-field btn btn-primary" type="button" data-toggle="modal" data-target="#loginModal">Login</li>
									}
									else
									{
										<li class="nav-item">
											@Html.ActionLink("Medlemsområde", "LoggedIn", "Home", null, new { @class = "login-field btn btn-primary" })
										</li>
									}
								}
							</ul>
						</div>
					</nav>
				</div>
			</div>
		</div>
	</div>
	<!-- Login modal -->
	<div class="modal fade" tabindex="-1" role="dialog" id="loginModal">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Login</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<div class="col-lg-12">
						@{ if (!User.Identity.IsAuthenticated)
							{
								Html.RenderPartial("Login");
							}
						}
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuller</button>
				</div>
			</div>
		</div>
	</div>

	@RenderBody()
	<hr />
	<div class="col-12 text-center container-fluid">
		<footer>
			<div class="jumbotron footer">
				<p><b>Veteranbil Klub 2017©</b></p>
			</div>
		</footer>
	</div>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
	<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
	@RenderSection("scripts", required: false)
</body>
</html>
